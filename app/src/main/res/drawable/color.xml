<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval"
            android:width="50dp"
            android:height="50dp">
            <solid android:color="#ffffff" />
        </shape>

    </item>
<item android:state_selected="true">
    <shape
        android:shape="oval">
        <solid android:color="#ffffff" />
        <stroke
            android:width="2dp"
            android:color="#fff"/>
    </shape>
</item>
</selector>