<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/red"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/color_padding"
        android:src="@drawable/red"
        android:tag="@string/key_red"
        app:layout_constraintBottom_toTopOf="@+id/teal"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/orange"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/orange"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/color_padding"
        android:src="@drawable/orange"
        android:tag="@string/key_orange"
        app:layout_constraintBottom_toTopOf="@+id/light_blue"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/yellow"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/red"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/yellow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/color_padding"
        android:src="@drawable/yellow"
        android:tag="@string/key_yellow"
        app:layout_constraintBottom_toTopOf="@+id/blue"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/green"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/orange"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/green"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/color_padding"
        android:src="@drawable/green"
        android:tag="@string/key_green"
        app:layout_constraintBottom_toTopOf="@+id/purple"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/green2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/yellow"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/green2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/color_padding"
        android:src="@drawable/green2"
        android:tag="@string/key_green2"
        app:layout_constraintBottom_toTopOf="@+id/pink"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/green"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/teal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/color_padding"
        android:src="@drawable/teal"
        android:tag="@string/key_teal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toStartOf="@+id/light_blue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/light_blue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/color_padding"
        android:src="@drawable/light_blue"
        android:tag="@string/key_light_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/blue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/teal"
        app:layout_constraintTop_toBottomOf="@+id/orange" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/blue"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/color_padding"
        android:src="@drawable/blue"
        android:tag="@string/key_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/purple"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/light_blue"
        app:layout_constraintTop_toBottomOf="@+id/yellow" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/purple"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/color_padding"
        android:src="@drawable/purple"
        android:tag="@string/key_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pink"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/blue"
        app:layout_constraintTop_toBottomOf="@+id/green" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/pink"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/color_padding"
        android:src="@drawable/pink"
        android:tag="@string/key_pink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/purple"
        app:layout_constraintTop_toBottomOf="@+id/green2" />

</androidx.constraintlayout.widget.ConstraintLayout>
