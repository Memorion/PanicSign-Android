<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.bastianrinsche.panicsign.SignActivity">

    <include android:id="@+id/control_top"
        android:layout_above="@+id/button_change"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_widthPercent="20%"
        layout="@layout/layout_controls" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/view_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/control_bottom"
        android:layout_toStartOf="@id/control_bottom"
        android:layout_toRightOf="@id/control_top"
        android:layout_toEndOf="@id/control_top"
        android:layout_above="@id/button_change"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/sign_all"/>

    <include android:id="@+id/control_bottom"
        android:layout_above="@+id/button_change"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_widthPercent="20%"
        layout="@layout/layout_controls" />

    <Button
        android:id="@+id/button_change"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="@string/action_change"/>

</android.support.percent.PercentRelativeLayout>
